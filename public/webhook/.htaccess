<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Handle drakon_api without extension as PHP file
    RewriteRule ^drakon_api$ drakon_api.php [L,QSA]
</IfModule>

<Files "drakon_api">
    SetHandler application/x-httpd-php
</Files>

<Files "drakon_api.php">
    # Allow all HTTP methods
    <LimitExcept GET POST PUT DELETE PATCH OPTIONS>
        Require all granted
    </LimitExcept>
</Files>
